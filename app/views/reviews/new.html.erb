<div class="container">
  <%= form_with(model: @review, local: true) do |form| %>
  <div class="review-input">
    <%= form.text_area :text, class: 'review-form',placeholder: "Review" , rows: "10" %>  
  </div>
  <div class="form-multi">
    <%= form.text_field :name, class: 'name-form', placeholder: "Name" %>
    <%= form.collection_select :category_id, Category.all, :id, :name %>
    <div class="form_mask">
      <%= form.label :image, class: 'form-mask__image' do %>
        <i class="fas fa-wine-bottle"></i>
        <%= form.file_field :image, class: 'image-form' %>
      <% end %>
    </div>
    <div class="form-group row" id="star">
      <%= form.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
      <%= form.hidden_field :rate, id: :review_star %>
    </div>
      <script>
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'review[rate]',
        half: true,
      });
      </script>  

    <%= form.submit "SEND", class: 'submit-btn'%>
  </div>
  <% end %>
</div>
